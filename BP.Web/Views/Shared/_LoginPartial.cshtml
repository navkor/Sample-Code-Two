@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello @User.Identity.GetUserName()!<b class="caret"></b></a>
            @*@Html.Action("navigation", new { controller = "header", area = "" })*@
        </li><li>@Html.ActionLink("Logout", "Logout", "User", routeValues: new { area = "Auth" }, htmlAttributes: new { id = "loginLink" })</li>

    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "User", routeValues: new { area = "Auth"  }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
