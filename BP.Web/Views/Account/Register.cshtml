@using reCaptcha
@model BP.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <p>Your IP Address is @ViewBag.IPAddress</p>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Password Instructions", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            Passwords should be at least 6 characters long and consist of
            <ul>
                <li>
                    At least one capital letter
                </li>
                <li>
                    At least one lower case letter
                </li>
                <li>
                    At least one number
                </li>
                <li>
                    At least one non-alphanumeric character
                </li>
            </ul>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    @ReCaptcha.GetHtml(@ViewBag.publicKey)

    if (ViewBag.RecaptchaLastErrors != null)
    {
        <div>Oops! Invalid reCAPTCHA =(</div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Login instead", "Login", new { area = "", controller = "Account" })
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src='https://www.google.com/recaptcha/api.js'></script>
}
